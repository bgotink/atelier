{
  "version": 1,
  "projects": {
    "all": {
      "root": "",
      "architect": {
        "build": {
          "builder": "@snuggery/snuggery:glob",
          "options": {
            "include": "@snuggery/*"
          }
        },
        "deploy": {
          "builder": "@snuggery/yarn:deploy",
          "options": {
            "useWorkspacePlugin": true,
            "buildTarget": "build"
          },
          "configurations": {
            "next": {
              "distTag": "next"
            }
          }
        },
        "lint": {
          "builder": "@snuggery/snuggery:execute",
          "options": {
            "package": "eslint",
            "arguments": ["packages", "integration"]
          },
          "configurations": {
            "fix": {
              "arguments": ["--fix", "packages", "integration"]
            }
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "jest.config.js"
          }
        }
      }
    },
    "@snuggery/snuggery": {
      "root": "packages/snuggery",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    },
    "@snuggery/global": {
      "root": "packages/global",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    },
    "@snuggery/architect": {
      "root": "packages/architect",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    },
    "@snuggery/core": {
      "root": "packages/core",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    },
    "@snuggery/schematics": {
      "root": "packages/schematics",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    },
    "@snuggery/yarn": {
      "root": "packages/yarn",
      "architect": {
        "build": {
          "builder": "$direct:./scripts/build"
        }
      }
    },
    "@snuggery/yarn-plugin-snuggery": {
      "root": "packages/yarn-plugin-snuggery",
      "architect": {
        "build": {
          "builder": "@snuggery/snuggery:execute",
          "options": {
            "package": "@yarnpkg/builder",
            "arguments": ["build", "plugin"]
          },
          "configurations": {
            "dev": {
              "arguments": ["build", "plugin", "--no-minify"]
            }
          }
        }
      }
    },
    "@snuggery/yarn-plugin-snuggery-workspace": {
      "root": "packages/yarn-plugin-snuggery-workspace",
      "architect": {
        "build": {
          "builder": "@snuggery/snuggery:execute",
          "options": {
            "package": "@yarnpkg/builder",
            "arguments": ["build", "plugin"]
          },
          "configurations": {
            "dev": {
              "arguments": ["build", "plugin", "--no-minify"]
            }
          }
        }
      }
    },
    "integration": {
      "root": "integration",
      "architect": {
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "integration/jest.config.js"
          }
        }
      }
    }
  }
}
