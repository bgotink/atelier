{
  "version": 1,
  "projects": {
    "all": {
      "root": "",
      "architect": {
        "lint": {
          "builder": "@bgotink/atelier:execute",
          "options": {
            "package": "eslint",
            "arguments": ["packages", "integration"]
          },
          "configurations": {
            "fix": {
              "arguments": ["--fix", "packages", "integration"]
            }
          }
        }
      }
    },
    "atelier": {
      "root": "packages/atelier",
      "architect": {
        "build": {
          "builder": "./scripts/build"
        }
      }
    },
    "integration": {
      "root": "integration",
      "architect": {
        "test": {
          "builder": "@bgotink/atelier:execute",
          "options": {
            "package": "jest"
          }
        }
      }
    }
  }
}
